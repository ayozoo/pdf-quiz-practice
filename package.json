{
  "name": "pdf-quiz-practice",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:client": "npm run dev --prefix client",
    "dev:server": "npm run start --prefix server",
    "start": "run-p dev:*",
    "lint:client": "npm run lint --prefix client",
    "lint:server": "npm run lint --prefix server",
    "lint": "run-p lint:client lint:server",
    "lint:fix:client": "npm run lint:fix --prefix client",
    "lint:fix:server": "npm run lint:fix --prefix server",
    "lint:fix": "run-p lint:fix:client lint:fix:server",
    "format": "prettier --write \"client/src/**/*.{ts,tsx,css}\" \"server/src/**/*.ts\" \"./*.{json,md,yml}\" \".github/**/*.yml\"",
    "format:check": "prettier --check \"client/src/**/*.{ts,tsx,css}\" \"server/src/**/*.ts\" \"./*.{json,md,yml}\" \".github/**/*.yml\"",
    "prepare": "husky"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2"
  }
}
